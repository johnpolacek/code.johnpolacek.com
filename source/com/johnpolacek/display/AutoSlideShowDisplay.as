package com.johnpolacek.display {		import flash.display.Sprite;	import flash.display.Loader;	import flash.display.Bitmap;	import flash.events.Event;	import flash.events.MouseEvent;	import flash.events.IOErrorEvent;	import flash.net.URLRequest;	import com.johnpolacek.animation.AutoSlideShow;	import com.johnpolacek.media.ImageStack;	/** * Creates an ImageStack of images, then displays them via AutoSlideShow *  * @see com.johnpolacek.animation.AutoSlideShow * @see com.johnpolacek.media.ImageStack * * @version  * <b>16 Apr 2010</b>  Improved error handling <br>  * <b>8 Mar 2010</b> * @author John Polacek, john@johnpolacek.com */	 		public class AutoSlideShowDisplay extends ContentDisplay	{				private var slides:ImageStack;				/** @param urls Array of urls for the audio files */		public function AutoSlideShowDisplay(urls:Array) 		{			slides = new ImageStack(urls);			slides.addEventListener(Event.COMPLETE, onLoadComplete);		}				/** Starts slideshow animation and dispatches Event.COMPLETE */		override public function onLoadComplete(event:Event):void 		{			if (slides.numChildren > 0)			{				addChild(slides);				var slideshow:AutoSlideShow = new AutoSlideShow();				slideshow.start(slides);				dispatchEvent(new Event(Event.COMPLETE));			}			else			{				trace("No slides loaded - URLs not found");				dispatchEvent(new IOErrorEvent(IOErrorEvent.IO_ERROR));			}					}					}}