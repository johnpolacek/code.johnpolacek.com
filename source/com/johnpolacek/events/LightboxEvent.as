package com.johnpolacek.events {	import flash.events.Event;	import com.johnpolacek.components.LightboxContentInfo;	/** * A LightboxEvent is used to pass LightboxContentInfo objects or content urls  * in a contentArray to listeners that initiate the display of lightbox content *  * @version 4 Apr 2010 * @author John Polacek, john@johnpolacek.com */	 	public class LightboxEvent extends Event {		/** LightboxInfo object passed via the LightboxEvent */			public var contentInfo:Object;		public static const DISPLAY_CONTENT:String = "displayContent";		public static const VIEW_CONTENT:String = "viewContent";		public function LightboxEvent(type:String, c:*, bubbles:Boolean = true, cancelable:Boolean = false) {			super(type, bubbles,cancelable);			contentInfo = c;		}				public override function clone():Event		{			return new LightboxEvent(type, contentInfo, bubbles, cancelable);		}	}}