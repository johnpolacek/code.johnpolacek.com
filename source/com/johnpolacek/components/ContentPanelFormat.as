package com.johnpolacek.components {			 /** * The ContentPanelFormat class represents formatting information for the ContentPanel application class.  *  *  * Properties may be set by xml data that is passed to the ContentPanelFormat constructor. * Properties not defined in the xml file will retain their default values. *  * @version 21 Apr 2010 * @author John Polacek, john@johnpolacek.com */	 		import com.johnpolacek.components.LightboxFormat;	import flash.text.Font;	import flash.text.StyleSheet;	import flash.text.TextFormat;		public class ContentPanelFormat {				/** 		* Width of panel		* Default: 550	**/		public var width:int = 550;		/** 		* Minimum height of the panel. 		* Default: 0 pixels (no minimum height)	**/		public var height:int = 0;		/** 		* Sets the background color of the contentContainer.		* Default:	0xFFFFFF **/		public var color:uint = 0xFFFFFF;		/** 		* Sets the background alpha of the contentContainer.		* Default:	1 **/		public var alpha:Number = 1;		/** 		* Sets the background noise level of the contentContainer.		* Default:	0 **/		public var noise:Number = 0;		/** 		* Top margin of the panel 		* Default: 0 pixels	**/		public var marginTop:int = 0;		/** 		* Bottom margin of the panel 		* Default: 0 pixels	**/		public var marginBottom:int = 0;		/** 		* Left margin of the panel 		* Default: 0 pixels	**/		public var marginLeft:int = 0;		/** 		* Left margin of the panel 		* Default: 0 pixels	**/		public var marginRight:int = 0;		/** 		* Spacing between elements 		* Default: 0 pixels	**/		public var spacing:int = 0;		/** 		* Sets the color of any divider lines.		* Default:	0x000000 **/		public var lineColor:uint = 0x000000;						public function ContentPanelFormat()		{					}				/**  		* Shortcut to set uniform margins		* @param m Default is 0 (no margin)		**/		public function setMargin(m:int = 0):void		{			marginTop = marginBottom = marginLeft =  marginRight = m;		}				/** Use xml file to set formatting **/		public function setFormatFromXML(xml:XML) 		{			if (xml.margin.*.length < 1) 				marginTop = marginBottom =  marginLeft =  marginRight = int(xml.margin);							if (String(xml.margin.left)!="") 				marginLeft = int(xml.margin.left);							if (String(xml.margin.right)!="") 				marginRight = int(xml.margin.right);							if (String(xml.margin.top)!="") 				marginTop = int(xml.margin.top);							if (String(xml.margin.bottom)!="") 				marginBottom = int(xml.margin.bottom);						if (int(xml.width))				width = int(xml.width);							if (int(xml.height))				height = int(xml.height);							if (int(xml.spacing))				spacing = int(xml.spacing);							if (int(xml.linecolor))				lineColor = xml.linecolor;						if (String(xml.background.color)!="") 				color = uint(xml.background.color);							if (String(xml.background.alpha)!="") 				alpha = Number(xml.background.alpha);							if (String(xml.background.noise)!="") 				noise = Number(xml.background.noise);					}	}}