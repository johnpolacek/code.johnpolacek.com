package com.johnpolacek.text{		import flash.display.Sprite;	import flash.text.AntiAliasType;	import flash.text.Font;	import flash.text.TextField;	import flash.text.TextFieldAutoSize;	import flash.text.TextFormat;	import flash.text.TextFormatAlign;/** * The BasicTextBlock class provides a simple, efficient way to display text  * in a TextField within certain parameters *  * @example  * <br /> * Use BasicTextBlock to create text for a button. * <code>var textFormat:TextFormat = new TextFormat("Trebuchet MS", 14, 0x111111); * var buttonText:BasicTextBlock = new BasicTextBlock("Click Me!", 0, textFormat);</code> *  * @version  * <b>10 Sep 2010</b> Renamed from TextBlock to BasicTextBlock<br/> * <b>05 Apr 2010</b>  * @author John Polacek, john@johnpolacek.com */	 		public class BasicTextBlock extends Sprite {				/** Contains the text. **/		public var textfield:TextField = new TextField();		/** The x location of the textfield (used to offset flash textfield padding). **/		private var offsetX:int;		/** The y location of the textfield (used to offset flash textfield padding). **/		private var offsetY:int;				private var format:TextFormat = new TextFormat();				private var _text:String = "";				public function BasicTextBlock(txt:String = "",									   w:int = 0,									   f:TextFormat = null,									   oX:int = 0,									   oY:int = 0) 		{			offsetX = oX;			offsetY = oY;			if (f != null)				format = f;			if (w > 0)			{				textfield.width = w;				textfield.wordWrap = true;			}			else			{				textfield.multiline = textfield.wordWrap = false;			}			textfield.autoSize = TextFieldAutoSize.LEFT;						textfield.antiAliasType = AntiAliasType.ADVANCED;			if (format.font) 				textfield.embedFonts = true;			textfield.text = _text = txt;			textfield.setTextFormat(format);			textfield.x = offsetX;			textfield.y = offsetY;			if (w == 0)			{				textfield.width = textfield.textWidth + textfield.defaultTextFormat.size;			}			addChild(textfield);		}				public function get text():String		{			return _text;		}				public function set text(value:String):void 		{			_text = value;			textfield.text = _text;		}	}}