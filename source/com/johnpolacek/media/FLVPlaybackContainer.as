package com.johnpolacek.media {		import fl.video.FLVPlayback;	import flash.events.Event;	import flash.display.MovieClip;	public class FLVPlaybackContainer extends MovieClip 	{				public function VideoContainer():void		{			this.addEventListener(Event.REMOVED_FROM_STAGE, onRemovedFromStage);			vid.fullScreenTakeOver= false;		}					//--------------------------------------------------------------------------    //    //  EVENT HANDLERS    //    //--------------------------------------------------------------------------					private function onRemovedFromStage(event:Event):void		{			vid.stop();		}			}}