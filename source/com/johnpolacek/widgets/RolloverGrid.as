package com.johnpolacek.widgets {	import flash.display.MovieClip;	import flash.display.SimpleButton;	import flash.events.MouseEvent;			public class RolloverGrid extends MovieClip {						public function RolloverGrid() {			for (var i:int=0;i<this.numChildren;i++) {				var square:RolloverGridSquare = RolloverGridSquare(this.getChildAt(i));				square.hitzone.addEventListener(MouseEvent.MOUSE_OVER,btnOver);				square.hitzone.addEventListener(MouseEvent.MOUSE_OUT,btnOut);			}		}		private function btnOver($me:MouseEvent):void {			var square:RolloverGridSquare = RolloverGridSquare($me.currentTarget.parent);			setChildIndex(square, this.numChildren-1);			square.tweenOn();		}		private function btnOut($me:MouseEvent):void {			$me.currentTarget.parent.tweenOff();		}			}}