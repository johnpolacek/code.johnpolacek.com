package com.johnpolacek.utils {		import flash.display.MovieClip;	import flash.display.Scene;	/** * Utilities for working with the timeline * * @author John Polacek, john@johnpolacek.com */		public class TimelineUtils {				/** Returns the index int of a scene. Value of -1 means the scene is not indexed in the provided array. */			public static function getSceneIndex(scenesArray:Array, scene:Scene):int 		{			var sceneIndex:int = -1;			for (var i:int = 0; i < scenesArray.length; i++)			{				if (scenesArray[i].name == scene.name)				{					sceneIndex = i;					break;				}			}			return sceneIndex;		}			}}