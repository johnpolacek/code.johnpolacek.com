package com.johnpolacek.utils {		import flash.display.MovieClip;	import flash.display.Stage;	import flash.display.StageDisplayState;	import flash.display.StageScaleMode;	/** * Utilities for working with presentations * * @author John Polacek, john@johnpolacek.com */		public class PresentationUtils {				/** 		* Calling goFullScreen will switch to full screen viewing mode when in		* projector mode. If in browser, it will catch the security error 		* (displayState can only be changed on a user click in browser mode) 		*/			public static function goFullScreen(stage:Stage, scale:Boolean = true):void		{			try 			{				if (!scale) 					stage.scaleMode = StageScaleMode.NO_SCALE;				else 					stage.scaleMode = StageScaleMode.SHOW_ALL;								stage.displayState = StageDisplayState.FULL_SCREEN;			}			catch (err:SecurityError) 			{				// ignore				trace("Must be in projector mode for full screen viewing");			}		}	}}